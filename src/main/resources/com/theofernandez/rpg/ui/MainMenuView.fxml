<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="com.theofernandez.rpg.ui.MainMenuViewController"
      alignment="CENTER" spacing="20" styleClass="root"
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17">
    <padding>
        <Insets top="30" right="50" bottom="30" left="50"/>
    </padding>

    <Label text="My RPG Game" styleClass="title-label"/>

    <Button text="New Game" onAction="#handleNewGameAction" maxWidth="Infinity"/>
    <Button text="Load Game" onAction="#handleLoadGameAction" maxWidth="Infinity"/>
    <Button text="Settings" onAction="#handleSettingsAction" maxWidth="Infinity"/>
    <Button text="Exit" onAction="#handleExitAction" maxWidth="Infinity"/>

</VBox>